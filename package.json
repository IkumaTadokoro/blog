{
  "name": "blog",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "setup": "npm run corepack",
    "corepack": "corepack enable pnpm",
    "dev": "astro dev",
    "start": "astro dev",
    "build": "rm -rf dist && astro build && pnpm build:pagefind",
    "build:pagefind": "pagefind --site dist",
    "deploy": "pnpm build && wrangler pages deploy dist",
    "preview": "wrangler pages dev ./dist",
    "preview:local": "astro preview",
    "check": "pnpm check:astro && pnpm check:biome",
    "check:astro": "astro check",
    "check:biome": "biome check .",
    "format": "biome format --write .",
    "lint": "biome lint --write .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:update": "playwright test --update-snapshots",
    "astro": "astro"
  },
  "dependencies": {
    "@astrojs/check": "0.9.4",
    "@astrojs/mdx": "3.1.9",
    "@astrojs/react": "3.6.3",
    "@astrojs/rss": "4.0.9",
    "@astrojs/tailwind": "5.1.2",
    "@expressive-code/plugin-line-numbers": "0.38.3",
    "@fontsource-variable/lexend": "5.1.1",
    "@fontsource-variable/montserrat": "5.1.0",
    "@fontsource-variable/noto-sans-jp": "5.1.0",
    "@iconify-json/lucide": "1.2.15",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "astro": "4.16.14",
    "astro-expressive-code": "0.38.3",
    "astro-icon": "1.1.4",
    "astro-pagefind": "1.6.0",
    "clsx": "2.1.1",
    "pagefind": "1.2.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "rehype-autolink-headings": "7.1.0",
    "rehype-external-links": "3.0.0",
    "rehype-slug": "6.0.0",
    "sanitize-html": "2.13.1",
    "tailwind-merge": "2.5.5",
    "tailwindcss": "3.4.15",
    "typescript": "5.6.3"
  },
  "packageManager": "pnpm@9.13.2",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@playwright/test": "1.48.2",
    "@tailwindcss/typography": "0.5.15",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "6.6.3",
    "@types/node": "22.9.3",
    "@types/sanitize-html": "2.13.0",
    "@vitest/browser": "2.1.5",
    "@vitest/ui": "2.1.5",
    "happy-dom": "15.11.6",
    "jsdom": "25.0.1",
    "lefthook": "1.8.4",
    "vitest": "2.1.5",
    "wrangler": "3.87.0"
  }
}
