---
type Props = {
  date: Date;
  size?: "small" | "medium" | "large";
};

const { date, size = "medium" } = Astro.props;
const sizeClasses = {
  small: "text-sm",
  medium: "text-label-14 sm:text-label-14 text-gray-700",
  large: "text-lg",
};
---

<time
  datetime={date.toISOString()}
  class={`font-mono tracking-widest text-foreground ${sizeClasses[size]}`}
>
  {
    date
      .toLocaleDateString("ja-JP", {
        year: "numeric",
        month: "2-digit",
        day: "2-digit",
      })
      .split("/")
      .join("-")
  }
</time>
