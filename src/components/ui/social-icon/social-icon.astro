---
import Github from "./icons/Github.svg";
import SizuMe from "./icons/SizuMe.svg";
import SpeakerDeck from "./icons/SpeakerDeck.svg";
import X from "./icons/X.svg";
import Zenn from "./icons/Zenn.svg";
import { type SocialIcon, socials } from "./social-icons";

interface Props {
  icon: SocialIcon;
}

const { icon } = Astro.props;
---

<a
  href={socials[icon].href}
  class="w-6 aspect-square hover:opacity-70 transition-opacity rounded-md"
  aria-label={socials[icon].linkTitle}
>
  {(() => {
    switch (icon) {
      case "Github":
        return <Github class="fill-gray-300 w-full h-full" />;
      case "X":
        return <X class="fill-gray-300 w-full h-full" />;
      case "Zenn":
        return <Zenn class="fill-gray-300 w-full h-full" />;
      case "SpeakerDeck":
        return <SpeakerDeck class="fill-gray-300 w-full h-full" />;
      case "SizuMe":
        return <SizuMe class="fill-gray-300 w-full h-full" />;
      default:
        return null;
    }
  })()}
</a>
