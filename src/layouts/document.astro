---
import "../stylesheet/globalStyles.css";
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
import ogImage from "../assets/ogp.png";
import Footer from "../components/ui/footer.astro";
import Header from "../components/ui/header.astro";
import ThemeProvider from "../components/ui/theme-provider.astro";
import { SITE } from "../shared/config/site";

type Props = {
  title?: string;
  description?: string;
};

const { title, description } = Astro.props as Props;

const pageTitle = title ?? Astro.url.pathname.replace(/^\/|\/$/g, "");
const pageDescription = description ?? SITE.description;
const pageTitlePrefixed = pageTitle
  ? `${pageTitle} | ${SITE.title}`
  : SITE.title;

const url = new URL(Astro.url.pathname, Astro.site);
const ogp = new URL(ogImage.src, Astro.site?.origin as string);
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={pageDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={SITE.title} />
    <meta property="og:url" content={url} />
    <meta property="og:title" content={pageTitlePrefixed} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content={ogp} />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:creator" content="@ikumatdkr" />
    <title>{pageTitlePrefixed}</title>
    <link rel="icon" href="/favicon.ico" />
    <link rel="canonical" href={url} />
    <ClientRouter />
    <ThemeProvider />
  </head>
  <body class="min-h-screen grid grid-rows-[auto_1fr_auto] bg-background">
    <Header />
    <main>
      <div class="h-full max-w-screen-md mx-auto p-4 mb-8">
        <slot />
      </div>
    </main>
    <Footer />
  </body>
</html>
