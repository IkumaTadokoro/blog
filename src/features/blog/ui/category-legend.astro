---
const categories = [
  { name: "tech", color: "bg-blue-600" },
  { name: "idea", color: "bg-yellow-300" },
  { name: "life", color: "bg-green-700" },
];
---

<div class="flex items-center gap-4">
  {
    categories.map((category) => (
      <div class="flex items-center gap-2">
        <div class={`w-3 aspect-square rounded-full ${category.color}`} />
        <span class="text-sm font-mono">{category.name}</span>
      </div>
    ))
  }
</div>
