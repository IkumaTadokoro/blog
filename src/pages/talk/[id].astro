---
import { render } from "astro:content";
import { createMarkdownProcessor } from "@astrojs/markdown-remark";
import Document from "../../app/ui/layout/document/index.astro";
import Author from "../../entities/author/ui/author/index.astro";
import Talk from "../../features/talk/talk.astro";
import {
  getTalkEmbedUrl,
  getTalkId,
  getTalks,
} from "../../features/talk/talks";

export async function getStaticPaths() {
  const talksEntries = await getTalks();
  return talksEntries.map((entry) => {
    return {
      params: { id: getTalkId(entry) },
      props: { entry },
    };
  });
}

const processor = await createMarkdownProcessor();
const { entry } = Astro.props;
const iframe = await getTalkEmbedUrl(entry.data.link, entry.data.title ?? "");
const markdown = await processor.render(entry.data.description ?? "");
const { Content } = await render({
  ...entry,
  rendered: {
    html: markdown.code,
  },
});
---

<Document title={`${entry.data.title!}`}>
  <Talk title={entry.data.title!} publishDate={entry.data.pubdate!}>
    <Fragment set:html={iframe} />
    <Content />
  </Talk>
  <div class="mt-16">
    <Author />
  </div>
</Document>
