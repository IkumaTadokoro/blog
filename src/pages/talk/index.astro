---
import TalkCard from "../../features/talk/talk-card.astro";
import Document from "../../layouts/document.astro";

import { getTalks, groupByTalkYear } from "../../features/talk/talks";

const talks = await getTalks();
const talksByYear = await groupByTalkYear(talks);
---

<Document title="talk">
  <div class="flex justify-between items-center py-4">
    <h2 class="text-3xl font-bold text-foreground tracking-wider">talk</h2>
  </div>
  <div class="grid gap-16">
    {
      talksByYear.entries().map(([year, talks]) => (
        <section class="grid gap-y-4">
          <div class="mx-[calc(50%-50cqi)] sticky top-0 py-4 z-20 backdrop-blur-md gradient-mask-b-80">
            <h3 class="text-2xl font-bold text-foreground tracking-wider max-w-screen-md mx-auto px-4">
              {year}
            </h3>
          </div>
          <div class="grid gap-x-6 gap-y-12 sm:grid-cols-2 z-10">
            {talks.map((talk) => (
              <TalkCard talk={talk} />
            ))}
          </div>
        </section>
      ))
    }
  </div>
</Document>
