---
import Search from "astro-pagefind/components/Search";
import Document from "../../layouts/document.astro";
---

<Document>
  <section class="grid grid-rows-[max-content_1fr_max-content] h-full gap-4">
    <hgroup class="space-y-2">
      <h2 class="text-3xl font-bold text-foreground tracking-wider">SEARCH</h2>
      <p class="text-muted-foreground text-sm">
        サイト内のすべての記事を検索できます。
      </p>
    </hgroup>

    <Search
      id="search"
      className="pagefind-ui"
      uiOptions={{ showImages: false, pageSize: 6 }}
    />
  </section>
</Document>

<style>
  :root {
    --pagefind-ui-scale: 0.7;
    --pagefind-ui-text: hsl(var(--foreground));
    --pagefind-ui-background: hsl(var(--background));
    --pagefind-ui-border: hsl(var(--border));
    --pagefind-ui-border-width: 1px;
  }
</style>
