---
import { listBlog } from "../../entities/blog/api";
import Blog from "../../features/blog/ui/blog.astro";
import Document from "../../widgets/layout/document/without-main.astro";

export async function getStaticPaths() {
  const blogEntries = await listBlog();
  return blogEntries.map((entry) => ({
    params: { id: entry.id },
    props: { entry },
  }));
}

const { entry } = Astro.props;
---

<Document title={entry.data.title}>
  <Blog entry={entry} />
</Document>
